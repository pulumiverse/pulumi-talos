{
    "name": "talos",
    "description": "A Pulumi package for creating and managing talos config",
    "keywords": [
        "talos",
        "kubernetes",
        "pulumi"
    ],
    "homepage": "https://talos.dev",
    "license": "Apache-2.0",
    "repository": "https://github.com/siderolabs/pulumi-provider-talos",
    "language": {
        "csharp": {
            "liftSingleValueMethodReturns": true,
            "namespaces": {
                "bundle": "bundle"
            },
            "packageReferences": {
                "Pulumi": "3.*"
            }
        },
        "go": {
            "generateResourceContainerTypes": true,
            "importBasePath": "github.com/siderolabs/pulumi-provider-talos/sdk/go/talos",
            "liftSingleValueMethodReturns": true
        },
        "nodejs": {
            "dependencies": {
                "@pulumi/pulumi": "^3.0.0"
            },
            "devDependencies": {
                "@types/node": "^17.0.0",
                "typescript": "^3.7.0"
            },
            "liftSingleValueMethodReturns": true
        },
        "python": {
            "liftSingleValueMethodReturns": true,
            "requires": {
                "pulumi": "\u003e=3.0.0,\u003c4.0.0"
            }
        }
    },
    "config": {},
    "types": {
        "talos:index:Certs": {
            "description": "Talos Certs type",
            "properties": {
                "Admin": {
                    "$ref": "#/types/talos:index:PEMEncodedCertificateAndKey"
                },
                "Etcd": {
                    "$ref": "#/types/talos:index:PEMEncodedCertificateAndKey"
                },
                "K8s": {
                    "$ref": "#/types/talos:index:PEMEncodedCertificateAndKey"
                },
                "K8sAggregator": {
                    "$ref": "#/types/talos:index:PEMEncodedCertificateAndKey"
                },
                "K8sServiceAccount": {
                    "$ref": "#/types/talos:index:PEMEncodedKey"
                },
                "OS": {
                    "$ref": "#/types/talos:index:PEMEncodedCertificateAndKey"
                }
            },
            "type": "object"
        },
        "talos:index:Cluster": {
            "description": "Talos Cluster type",
            "properties": {
                "Id": {
                    "type": "string"
                },
                "Secret": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "talos:index:ConfigPatches": {
            "description": "patches applied to the config",
            "properties": {
                "patchFiles": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "$ref": "pulumi.json#/Asset"
                    },
                    "description": "patches specified as pulumi file assets"
                },
                "patches": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "$ref": "pulumi.json#/Any"
                    },
                    "description": "patches specified as a pulumi map"
                }
            },
            "type": "object"
        },
        "talos:index:PEMEncodedCertificateAndKey": {
            "description": "Talos PEMEncodedCertificateAndKey type",
            "properties": {
                "Crt": {
                    "$ref": "pulumi.json#/Any"
                },
                "Key": {
                    "$ref": "pulumi.json#/Any"
                }
            },
            "type": "object"
        },
        "talos:index:PEMEncodedKey": {
            "description": "Talos PEMEncodedKey type",
            "properties": {
                "Key": {
                    "$ref": "pulumi.json#/Any"
                }
            },
            "type": "object"
        },
        "talos:index:Secrets": {
            "description": "Talos Secrets type",
            "properties": {
                "AESCBCEncryptionSecret": {
                    "type": "string"
                },
                "BootstrapToken": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "talos:index:SecretsBundle": {
            "description": "Talos SecretsBundle type",
            "properties": {
                "Certs": {
                    "$ref": "#/types/talos:index:Certs"
                },
                "Cluster": {
                    "$ref": "#/types/talos:index:Cluster"
                },
                "Secrets": {
                    "$ref": "#/types/talos:index:Secrets"
                },
                "TrustdInfo": {
                    "$ref": "#/types/talos:index:TrustdInfo"
                }
            },
            "type": "object"
        },
        "talos:index:TalosMachineConfigApplyMode": {
            "type": "string",
            "enum": [
                {
                    "description": "apply config with a reboot",
                    "value": "REBOOT"
                },
                {
                    "description": "automatically try to apply and reboot if only required",
                    "value": "AUTO"
                },
                {
                    "description": "apply config without a reboot",
                    "value": "NO_REBOOT"
                },
                {
                    "description": "apply config as staged",
                    "value": "STAGED"
                }
            ]
        },
        "talos:index:TalosMachineConfigVersion": {
            "type": "string",
            "enum": [
                {
                    "description": "Talos Machine Configuration Version",
                    "value": "v1alpha1"
                }
            ]
        },
        "talos:index:TrustdInfo": {
            "description": "Talos TrustdInfo type",
            "properties": {
                "Token": {
                    "type": "string"
                }
            },
            "type": "object"
        }
    },
    "provider": {
        "description": "The provider type for the Talos package",
        "type": "object"
    },
    "resources": {
        "talos:index:clusterConfig": {
            "description": "Talos cluster config resource",
            "properties": {
                "additionalSans": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "additional Subject-Alt-Names for the APIServer certificate"
                },
                "clusterDiscovery": {
                    "type": "boolean",
                    "description": "cluster discovery feature"
                },
                "clusterEndpoint": {
                    "type": "string",
                    "description": "The cluster endpoint"
                },
                "clusterName": {
                    "type": "string",
                    "description": "cluster name"
                },
                "configPatches": {
                    "type": "object",
                    "$ref": "#/types/talos:index:ConfigPatches",
                    "description": "generated machineconfigs (applied to all node types)"
                },
                "configPatchesControlPlane": {
                    "type": "object",
                    "$ref": "#/types/talos:index:ConfigPatches",
                    "description": "generated machineconfigs (applied to 'controlplane' types)"
                },
                "configPatchesWorker": {
                    "type": "object",
                    "$ref": "#/types/talos:index:ConfigPatches",
                    "description": "generated machineconfigs (applied to 'worker' type)"
                },
                "configVersion": {
                    "type": "string",
                    "description": "the desired machine config version to refer to"
                },
                "controlplaneConfig": {
                    "type": "string",
                    "description": "Talos Controlplane Config",
                    "secret": true
                },
                "dnsDomain": {
                    "type": "string",
                    "description": "the dns domain to use for cluster"
                },
                "docs": {
                    "type": "boolean",
                    "description": "machine config documentation enabled"
                },
                "examples": {
                    "type": "boolean",
                    "description": "machine config examples enabled"
                },
                "installDisk": {
                    "type": "string",
                    "description": "the disk to install to "
                },
                "installImage": {
                    "type": "string",
                    "description": "the image used to perform an installation"
                },
                "kubernetesVersion": {
                    "type": "string",
                    "description": "desired kubernetes version to run"
                },
                "kubespan": {
                    "type": "boolean",
                    "description": "kubespan enabled"
                },
                "persist": {
                    "type": "boolean",
                    "description": "persist value for configs"
                },
                "registryMirrors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "list of registry mirrors"
                },
                "secrets": {
                    "type": "object",
                    "$ref": "#/types/talos:index:SecretsBundle",
                    "description": "Talos Secrets Bundle",
                    "secret": true
                },
                "talosConfig": {
                    "type": "string",
                    "description": "Talos Config",
                    "secret": true
                },
                "talosVersion": {
                    "type": "string",
                    "description": "the desired Talos version"
                },
                "workerConfig": {
                    "type": "string",
                    "description": "Talos Worker Config",
                    "secret": true
                }
            },
            "type": "object",
            "required": [
                "clusterName",
                "clusterEndpoint",
                "additionalSans",
                "configPatches",
                "configPatchesControlPlane",
                "configPatchesWorker",
                "dnsDomain",
                "installDisk",
                "installImage",
                "kubernetesVersion",
                "persist",
                "registryMirrors",
                "talosVersion",
                "configVersion",
                "clusterDiscovery",
                "docs",
                "examples",
                "kubespan",
                "controlplaneConfig",
                "workerConfig",
                "talosConfig",
                "secrets"
            ],
            "inputProperties": {
                "additionalSans": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "additional Subject-Alt-Names for the APIServer certificate"
                },
                "clusterDiscovery": {
                    "type": "boolean",
                    "description": "enable cluster discovery feature (default true)",
                    "default": true
                },
                "clusterEndpoint": {
                    "type": "string",
                    "description": "The cluster endpoint is the URL for the Kubernetes API. If you decide to use\na control plane node, common in a single node control plane setup, use port 6443 as\nthis is the port that the API server binds to on every control plane node. For an HA\nsetup, usually involving a load balancer, use the IP and port of the load balancer."
                },
                "clusterName": {
                    "type": "string",
                    "description": "cluster name"
                },
                "configPatches": {
                    "type": "object",
                    "$ref": "#/types/talos:index:ConfigPatches",
                    "description": "patch generated machineconfigs (applied to all node types)"
                },
                "configPatchesControlPlane": {
                    "type": "object",
                    "$ref": "#/types/talos:index:ConfigPatches",
                    "description": "patch generated machineconfigs (applied to 'controlplane' types)"
                },
                "configPatchesWorker": {
                    "type": "object",
                    "$ref": "#/types/talos:index:ConfigPatches",
                    "description": "patch generated machineconfigs (applied to 'worker' type)"
                },
                "configVersion": {
                    "type": "string",
                    "description": "the desired machine config version to refer to"
                },
                "dnsDomain": {
                    "type": "string",
                    "description": "the dns domain to use for cluster (default \"cluster.local\")",
                    "default": "cluster.local"
                },
                "docs": {
                    "type": "boolean",
                    "description": "renders all machine configs adding the documentation for each field (default true)",
                    "default": true
                },
                "examples": {
                    "type": "boolean",
                    "description": "renders all machine configs with the commented examples (default true)",
                    "default": true
                },
                "installDisk": {
                    "type": "string",
                    "description": "the disk to install to (default \"/dev/sda\")",
                    "default": "/dev/sda"
                },
                "installImage": {
                    "type": "string",
                    "description": "the image used to perform an installation (default \"ghcr.io/talos-systems/installer:v0.14.2\")",
                    "default": "ghcr.io/talos-systems/installer:v0.14.2"
                },
                "kubernetesVersion": {
                    "type": "string",
                    "description": "desired kubernetes version to run (default \"1.23.6\")",
                    "default": "1.23.6"
                },
                "kubespan": {
                    "type": "boolean",
                    "description": "enable kubespan feature"
                },
                "persist": {
                    "type": "boolean",
                    "description": "the desired persist value for configs (default true)",
                    "default": true
                },
                "registryMirrors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "list of registry mirrors to use in format: \u003cregistry host\u003e=\u003cmirror URL\u003e"
                },
                "secrets": {
                    "type": "object",
                    "$ref": "#/types/talos:index:SecretsBundle",
                    "description": "Talos Secrets Bundle"
                },
                "talosVersion": {
                    "type": "string",
                    "description": "the desired Talos version to refer to"
                }
            },
            "requiredInputs": [
                "clusterName",
                "clusterEndpoint",
                "secrets"
            ]
        },
        "talos:index:clusterSecrets": {
            "description": "Talos secrets resource",
            "properties": {
                "configVersion": {
                    "type": "string"
                },
                "secrets": {
                    "type": "object",
                    "$ref": "#/types/talos:index:SecretsBundle",
                    "description": "Talos Secrets Bundle",
                    "secret": true
                },
                "talosVersion": {
                    "type": "string",
                    "description": "Talos version the config is generated for"
                }
            },
            "type": "object",
            "required": [
                "secrets",
                "talosVersion",
                "configVersion"
            ],
            "inputProperties": {
                "configVersion": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "string",
                            "$ref": "#/types/talos:index:TalosMachineConfigVersion"
                        }
                    ],
                    "description": "the desired machine config version to generate (default \"v1alpha1\")",
                    "default": "v1alpha1"
                },
                "talosVersion": {
                    "type": "string",
                    "description": "the desired Talos version to generate config for (backwards compatibility, e.g. v0.8)"
                }
            }
        },
        "talos:index:nodeApplyConfig": {
            "description": "A node apply config resource",
            "properties": {
                "endpoint": {
                    "type": "string",
                    "description": "node endpoint address"
                },
                "insecure": {
                    "type": "boolean",
                    "description": "allow insecure connections"
                },
                "machineConfig": {
                    "type": "object",
                    "$ref": "pulumi.json#/Asset",
                    "description": "machineconfig",
                    "secret": true
                },
                "mode": {
                    "type": "string",
                    "description": "machine config apply mode"
                },
                "node": {
                    "type": "string",
                    "description": "node address"
                },
                "talosConfig": {
                    "type": "object",
                    "$ref": "pulumi.json#/Asset",
                    "description": "talosconfig",
                    "secret": true
                },
                "timeout": {
                    "type": "integer",
                    "description": "wait timeout in seconds"
                }
            },
            "type": "object",
            "required": [
                "endpoint",
                "node",
                "talosConfig",
                "machineConfig",
                "mode",
                "insecure",
                "timeout"
            ],
            "inputProperties": {
                "endpoint": {
                    "type": "string",
                    "description": "node endpoint address"
                },
                "insecure": {
                    "type": "boolean",
                    "description": "whether to use insecure connection",
                    "default": false
                },
                "machineConfig": {
                    "type": "object",
                    "$ref": "pulumi.json#/Asset",
                    "description": "machineconfig"
                },
                "mode": {
                    "type": "string",
                    "$ref": "#/types/talos:index:TalosMachineConfigApplyMode",
                    "description": "machine config apply mode (default auto)",
                    "default": "AUTO"
                },
                "node": {
                    "type": "string",
                    "description": "node address"
                },
                "talosConfig": {
                    "type": "object",
                    "$ref": "pulumi.json#/Asset",
                    "description": "talosconfig"
                },
                "timeout": {
                    "type": "integer",
                    "description": "timeout in seconds (default 600)",
                    "default": 600
                }
            },
            "requiredInputs": [
                "endpoint",
                "node",
                "talosConfig",
                "machineConfig"
            ]
        },
        "talos:index:nodeBootstrap": {
            "description": "A node bootstrap resource",
            "properties": {
                "endpoint": {
                    "type": "string",
                    "description": "node endpoint address"
                },
                "node": {
                    "type": "string",
                    "description": "node address"
                },
                "talosConfig": {
                    "type": "string",
                    "description": "talosconfig",
                    "secret": true
                },
                "timeout": {
                    "type": "integer",
                    "description": "wait timeout in seconds"
                }
            },
            "type": "object",
            "required": [
                "endpoint",
                "node",
                "talosConfig",
                "timeout"
            ],
            "inputProperties": {
                "endpoint": {
                    "type": "string",
                    "description": "node endpoint address"
                },
                "node": {
                    "type": "string",
                    "description": "node address"
                },
                "talosConfig": {
                    "type": "string",
                    "description": "talosconfig"
                },
                "timeout": {
                    "type": "integer",
                    "description": "timeout in seconds (default 600)",
                    "default": 600
                }
            },
            "requiredInputs": [
                "endpoint",
                "node",
                "talosConfig"
            ]
        }
    },
    "functions": {
        "talos:index:getKubeConfig": {
            "description": "retrieve kubeconfig from a talos cluster",
            "inputs": {
                "properties": {
                    "endpoint": {
                        "type": "string",
                        "description": "node endpoint address"
                    },
                    "node": {
                        "type": "string",
                        "description": "node address"
                    },
                    "talosConfig": {
                        "type": "string",
                        "description": "talosconfig"
                    },
                    "timeout": {
                        "type": "integer",
                        "description": "timeout in seconds (default 600)",
                        "default": 600
                    }
                },
                "required": [
                    "endpoint",
                    "node",
                    "talosConfig"
                ]
            },
            "outputs": {
                "properties": {
                    "kubeconfig": {
                        "type": "string",
                        "description": "kubeconfig retrieved from the talos cluster",
                        "secret": true
                    }
                },
                "required": [
                    "kubeconfig"
                ]
            }
        }
    }
}